<div class="list-banner">
  <h1>Create your list</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <%= simple_form_for(@list) do |f| %>
        <%= f.input :name, placeholder: 'Add list' %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Create", class: "btn btn-primary btn-lg"  %>
      <% end %>
      <div class="flash flash-success alert alert-dismissible fade show" role="alert">
  <span><strong>Yay!</strong> 🎉 </span>
  <a data-bs-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
    </div>
  </div>
</div>
